extends layout

block content
  div.container
    div.row
      div.col.md-12.main-content
        h1.text-center Welcome to #{title}

        form.form-signin.col-md-6.offset-3
          h3.form-signin-heading Please log in
          label.sr-only(for='inputEmail') Email address
          input#inputEmail.form-control(type='email', placeholder='Email address',
          required='true', autofocus='true')
          label.sr-only(for='inputPassword') Password
          input#inputPassword.form-control(type='password', placeholder='Password', required='true')
          //.checkbox
            //label
            //  input(type='checkbox', value='remember-me')
            //  |  Remember me
          button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign in